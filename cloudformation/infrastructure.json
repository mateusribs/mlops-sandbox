{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "MLOps Sandbox Infrastructure - DynamoDB tables and Lambda functions for model inference",
  
  "Parameters": {
    "Stage": {
      "Type": "String",
      "Default": "local",
      "Description": "Deployment stage (local, dev, prod)"
    },
    "LambdaCodeBucket": {
      "Type": "String",
      "Default": "lambda-deployments",
      "Description": "S3 bucket containing Lambda deployment packages"
    }
  },
  
  "Resources": {
    
    "ModelRegistryTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "model-registry",
        "AttributeDefinitions": [
          {
            "AttributeName": "model_name",
            "AttributeType": "S"
          },
          {
            "AttributeName": "version",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "model_name",
            "KeyType": "HASH"
          },
          {
            "AttributeName": "version",
            "KeyType": "RANGE"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST"
      }
    },
    
    "ModelPredictionsTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "model-predictions",
        "AttributeDefinitions": [
          {
            "AttributeName": "model_name",
            "AttributeType": "S"
          },
          {
            "AttributeName": "timestamp",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "model_name",
            "KeyType": "HASH"
          },
          {
            "AttributeName": "timestamp",
            "KeyType": "RANGE"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST"
      }
    },
    
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "mlops-lambda-execution-role",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "Policies": [
          {
            "PolicyName": "DynamoDBAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:GetItem",
                    "dynamodb:PutItem",
                    "dynamodb:Query",
                    "dynamodb:Scan",
                    "dynamodb:UpdateItem"
                  ],
                  "Resource": [
                    {
                      "Fn::GetAtt": ["ModelRegistryTable", "Arn"]
                    },
                    {
                      "Fn::GetAtt": ["ModelPredictionsTable", "Arn"]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    
    "ClassifyAnomalyFunction": {
      "Type": "AWS::Lambda::Function",
      "DependsOn": ["LambdaExecutionRole", "ModelRegistryTable"],
      "Properties": {
        "FunctionName": "classify_anomaly",
        "Runtime": "python3.11",
        "Handler": "handler.handler",
        "Timeout": 10,
        "Role": {
          "Fn::GetAtt": ["LambdaExecutionRole", "Arn"]
        },
        "Code": {
          "S3Bucket": {
            "Ref": "LambdaCodeBucket"
          },
          "S3Key": "classify_anomaly.zip"
        },
        "Environment": {
          "Variables": {
            "STAGE": {
              "Ref": "Stage"
            },
            "MODEL_REGISTRY_TABLE": {
              "Ref": "ModelRegistryTable"
            }
          }
        }
      }
    },
    
    "ClassifyAnomalyFunctionUrl": {
      "Type": "AWS::Lambda::Url",
      "Properties": {
        "AuthType": "NONE",
        "TargetFunctionArn": {
          "Fn::GetAtt": ["ClassifyAnomalyFunction", "Arn"]
        }
      }
    },
    
    "ClassifyAnomalyFunctionUrlPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Ref": "ClassifyAnomalyFunction"
        },
        "Action": "lambda:InvokeFunctionUrl",
        "Principal": "*",
        "FunctionUrlAuthType": "NONE"
      }
    },
    
    "ClassifyLevelFunction": {
      "Type": "AWS::Lambda::Function",
      "DependsOn": ["LambdaExecutionRole", "ModelRegistryTable"],
      "Properties": {
        "FunctionName": "classify_level",
        "Runtime": "python3.11",
        "Handler": "handler.handler",
        "Timeout": 10,
        "Role": {
          "Fn::GetAtt": ["LambdaExecutionRole", "Arn"]
        },
        "Code": {
          "S3Bucket": {
            "Ref": "LambdaCodeBucket"
          },
          "S3Key": "classify_level.zip"
        },
        "Environment": {
          "Variables": {
            "STAGE": {
              "Ref": "Stage"
            },
            "MODEL_REGISTRY_TABLE": {
              "Ref": "ModelRegistryTable"
            }
          }
        }
      }
    },
    
    "ClassifyLevelFunctionUrl": {
      "Type": "AWS::Lambda::Url",
      "Properties": {
        "AuthType": "NONE",
        "TargetFunctionArn": {
          "Fn::GetAtt": ["ClassifyLevelFunction", "Arn"]
        }
      }
    },
    
    "ClassifyLevelFunctionUrlPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Ref": "ClassifyLevelFunction"
        },
        "Action": "lambda:InvokeFunctionUrl",
        "Principal": "*",
        "FunctionUrlAuthType": "NONE"
      }
    },

    "MLOpsRestApi": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Name": "mlops-sandbox-api",
        "Description": "REST API for MLOps Lambda functions with path-based routing",
        "EndpointConfiguration": {
          "Types": ["REGIONAL"]
        }
      }
    },

    "AnomalyResource": {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId": {
          "Ref": "MLOpsRestApi"
        },
        "ParentId": {
          "Fn::GetAtt": ["MLOpsRestApi", "RootResourceId"]
        },
        "PathPart": "anomaly"
      }
    },

    "LevelResource": {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId": {
          "Ref": "MLOpsRestApi"
        },
        "ParentId": {
          "Fn::GetAtt": ["MLOpsRestApi", "RootResourceId"]
        },
        "PathPart": "level"
      }
    },

    "AnomalyPostMethod": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {
          "Ref": "MLOpsRestApi"
        },
        "ResourceId": {
          "Ref": "AnomalyResource"
        },
        "HttpMethod": "POST",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Uri": {
            "Fn::Sub": "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${ClassifyAnomalyFunction.Arn}/invocations"
          }
        }
      }
    },

    "LevelPostMethod": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "RestApiId": {
          "Ref": "MLOpsRestApi"
        },
        "ResourceId": {
          "Ref": "LevelResource"
        },
        "HttpMethod": "POST",
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Uri": {
            "Fn::Sub": "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${ClassifyLevelFunction.Arn}/invocations"
          }
        }
      }
    },

    "ClassifyAnomalyInvokePermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Ref": "ClassifyAnomalyFunction"
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "apigateway.amazonaws.com",
        "SourceArn": {
          "Fn::Sub": "arn:aws:execute-api:${AWS::Region}:${AWS::AccountId}:${MLOpsRestApi}/*"
        }
      }
    },

    "ClassifyLevelInvokePermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Ref": "ClassifyLevelFunction"
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "apigateway.amazonaws.com",
        "SourceArn": {
          "Fn::Sub": "arn:aws:execute-api:${AWS::Region}:${AWS::AccountId}:${MLOpsRestApi}/*"
        }
      }
    },

    "ApiDeployment": {
      "Type": "AWS::ApiGateway::Deployment",
      "DependsOn": ["AnomalyPostMethod", "LevelPostMethod"],
      "Properties": {
        "RestApiId": {
          "Ref": "MLOpsRestApi"
        },
        "StageName": "local"
      }
    }
  },
  
  "Outputs": {
    "ModelRegistryTableName": {
      "Description": "Name of the model registry DynamoDB table",
      "Value": {
        "Ref": "ModelRegistryTable"
      }
    },
    "ModelRegistryTableArn": {
      "Description": "ARN of the model registry DynamoDB table",
      "Value": {
        "Fn::GetAtt": ["ModelRegistryTable", "Arn"]
      }
    },
    "ModelPredictionsTableName": {
      "Description": "Name of the model predictions DynamoDB table",
      "Value": {
        "Ref": "ModelPredictionsTable"
      }
    },
    "ModelPredictionsTableArn": {
      "Description": "ARN of the model predictions DynamoDB table",
      "Value": {
        "Fn::GetAtt": ["ModelPredictionsTable", "Arn"]
      }
    },
    "ClassifyAnomalyFunctionArn": {
      "Description": "ARN of the classify_anomaly Lambda function",
      "Value": {
        "Fn::GetAtt": ["ClassifyAnomalyFunction", "Arn"]
      }
    },
    "ClassifyAnomalyFunctionUrl": {
      "Description": "URL of the classify_anomaly Lambda function",
      "Value": {
        "Fn::GetAtt": ["ClassifyAnomalyFunctionUrl", "FunctionUrl"]
      }
    },
    "ClassifyLevelFunctionArn": {
      "Description": "ARN of the classify_level Lambda function",
      "Value": {
        "Fn::GetAtt": ["ClassifyLevelFunction", "Arn"]
      }
    },
    "ClassifyLevelFunctionUrl": {
      "Description": "URL of the classify_level Lambda function",
      "Value": {
        "Fn::GetAtt": ["ClassifyLevelFunctionUrl", "FunctionUrl"]
      }
    },
    "LambdaExecutionRoleArn": {
      "Description": "ARN of the Lambda execution role",
      "Value": {
        "Fn::GetAtt": ["LambdaExecutionRole", "Arn"]
      }
    },
    "RestApiId": {
      "Description": "ID of the REST API",
      "Value": {
        "Ref": "MLOpsRestApi"
      }
    },
    "RestApiEndpointBase": {
      "Description": "Base URL of the REST API",
      "Value": {
        "Fn::Sub": "https://${MLOpsRestApi}.execute-api.${AWS::Region}.amazonaws.com/local"
      }
    },
    "RestApiAnomalyEndpoint": {
      "Description": "Endpoint for anomaly classification",
      "Value": {
        "Fn::Sub": "https://${MLOpsRestApi}.execute-api.${AWS::Region}.amazonaws.com/local/anomaly"
      }
    },
    "RestApiLevelEndpoint": {
      "Description": "Endpoint for level classification",
      "Value": {
        "Fn::Sub": "https://${MLOpsRestApi}.execute-api.${AWS::Region}.amazonaws.com/local/level"
      }
    }
  }
}
